<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>DialogGenerator</id>
		<version>1.0.0</version>
		<authors>Dillion Lowry</authors>
		<description>Dialog generator for .NET applications</description>
		<dependencies>
			<group targetFramework="netstandard2.0">
				<dependency id="Microsoft.CodeAnalysis.CSharp" version="3.8.0" />
			</group>
		</dependencies>
	</metadata>
	<files>
		<!-- Source generator -->
		<file src="bin\Release\netstandard2.0\DialogGenerator.dll" target="analyzers/dotnet/cs" />

		<!-- Attribute file -->
		<file src="..\DialogAttributes\**\*.cs" target="contentFiles/cs/netstandard2.0" />

		<!-- Source generator dependencies -->
		<file src="bin\Release\netstandard2.0\DialogAttributes.dll" target="lib/netstandard2.0" />
	</files>
</package>